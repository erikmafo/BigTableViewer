<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.erikmafo.btviewer.controllers.BigtableMenuBarController">


    <menus>
        <Menu text="File">
            <items>
                <MenuItem onAction="#handleCreateNewTableAction" text="Add table"/>
                <Menu fx:id="selectTableMenu" text="Tables"/>
                <MenuItem fx:id="credentialsMenu" onAction="#handleManageCredentialsAction" text="Credentials"/>
            </items>
        </Menu>

        <Menu text="Help">
            <items>
                <MenuItem text="About"/>
            </items>
        </Menu>

    </menus>

</MenuBar>

